<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Доступ к файлам внутри приложения -->
    <files-path name="app_files" path="." />
    <cache-path name="app_cache" path="." />
    
    <!-- Доступ к внешним хранилищам -->
    <external-path name="external" path="." />
    <external-files-path name="external_files" path="." />
    <external-cache-path name="external_cache" path="." />
    
    <!-- Специальные пути для экспорта/импорта -->
    <external-path name="download" path="Download" />
    
    <!-- Пути для изображений -->
    <external-path name="pictures" path="Pictures" />
    <external-path name="winetastenote" path="Pictures/winetastenote" />
    
    <!-- Внутренняя память приложения (не требует особых разрешений) -->
    <files-path name="internal_pictures" path="winetastenote" />
</paths>